{
  "apps": [
    {
      "name": "buffer",
      "script": "./dist/server/main.js",
      "instances": 2,
      "exec_mode": "cluster",
      "time": true,
      "watch": true,
      "autorestart": true,
      "timestamp": "YYYY-MM-DD HH:mm Z",
      "error_file": "./log/err.log",
      "out_file": "./log/out.log",
      "log_file": "./log/combined.log",
      "max_memory_restart": "100M",
      "env": {
        "NODE_ENV": "production",
        "PORT": 5000
      }
    }
  ]
}